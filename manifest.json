{
  "manifest_version": 2,
  "name": "CryptoScript",
  "version": "1.0",
  "description": "A basic POC for GPG signed JavaScript with key pinning.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "dist/content.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "CryptoScript",
    "default_popup": "src/popup/index.html"
  },
  "permissions": [
    "<all_urls>",
    "https://keybase.io/*",
    "storage",
    "activeTab"
  ]
}
